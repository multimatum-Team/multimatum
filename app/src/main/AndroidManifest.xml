<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.multimatum_team.multimatum">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MultimatumApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Multimatum"
        tools:ignore="ExtraText">
        <activity
            android:name=".AddDeadlineActivity"
            android:exported="false" />

        <service
            android:name=".service.ProcrastinationDetectorService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".DeadlineDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".QRCodeReaderActivity"
            android:exported="false" />
        <activity android:name=".MainSettingsActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".AccountActivity"
            android:exported="false"
            android:parentActivityName=".MainSettingsActivity" />
        <activity
            android:name=".QRGeneratorActivity"
            android:exported="false"
            android:parentActivityName=".DeadlineDetailsActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ReminderBroadcastReceiver" />
    </application>

</manifest>